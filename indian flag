<body>

<button onclick="blast()">ðŸ‡®ðŸ‡³ CLICK FOR BLAST ðŸ‡®ðŸ‡³</button>

<div class="chakra" id="chakra"></div>

<script>
// create chakra spokes
const chakra=document.getElementById("chakra");
for(let i=0;i<24;i++){
    let s=document.createElement("span");
    s.style.transform=`rotate(${i*15}deg)`;
    chakra.appendChild(s);
}

function blast(){
    document.querySelector("button").style.display="none";
    chakra.style.display="block";

    // tricolor rain
    setInterval(()=>{
        let b=document.createElement("div");
        b.className="bar";
        let colors=["#ff9933","white","#138808"];
        b.style.background=colors[Math.floor(Math.random()*3)];
        b.style.left=Math.random()*window.innerWidth+"px";
        b.style.animationDuration=(1+Math.random()*2)+"s";
        document.body.appendChild(b);
        setTimeout(()=>b.remove(),3000);
    },80);
}
</script>

</body>
