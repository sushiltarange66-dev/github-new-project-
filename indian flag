    text-align:center;
    color:white;
}

/* Button */
button{
    position:absolute;
    top:40%;
    left:50%;
    transform:translate(-50%,-50%);
    padding:20px 45px;
    font-size:24px;
    border:none;
    border-radius:50px;
    background:linear-gradient(orange,white,green);
    font-weight:bold;
    cursor:pointer;
    z-index:10;
}

/* Chakra */
.chakra{
    position:absolute;
    top:50%;
    left:50%;
    width:120px;
    height:120px;
    border:5px solid navy;
    border-radius:50%;
    transform:translate(-50%,-50%);
    animation:spin 2s linear infinite;
    display:none;
}
.chakra span{
    position:absolute;
    width:2px;
    height:55px;
    background:navy;
    top:5px;
    left:50%;
    transform-origin:bottom;
}

@keyframes spin{
    from{transform:translate(-50%,-50%) rotate(0deg);}
    to{transform:translate(-50%,-50%) rotate(360deg);}
}

/* Rain bars */
.bar{
    position:absolute;
    width:8px;
    height:40px;
    top:-50px;
    animation:fall linear infinite;
}
@keyframes fall{
    to{transform:translateY(110vh);}
